---
import { getCollection, type CollectionEntry } from 'astro:content';
import FormattedDate from '@/components/FormattedDate.astro';

interface Props {
	limit?: number;
	title?: string;
}

type BlogEntry = CollectionEntry<'blog'>;

const { limit = 3, title = 'Latest posts' } = Astro.props;

const posts: BlogEntry[] = (await getCollection('blog'))
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
	.slice(0, Math.max(0, limit));
---

{posts.length > 0 ? (
	<section class="latest-posts">
		<div class="latest-posts__header">
			<h2>{title}</h2>
			<a href="/blog" class="latest-posts__view-all">
				View all
			</a>
		</div>
		<table class="post-table">
			<thead>
				<tr>
					<th scope="col">Post</th>
					<th scope="col">Published</th>
				</tr>
			</thead>
			<tbody>
				{posts.map((post) => {
					const { title: postTitle, pubDate } = post.data;
					const href = `/blog/${post.id}/`;

					return (
						<tr>
							<td class="post-table__title">
								<a href={href}>
									<span>{postTitle}</span>
								</a>
							</td>
							<td class="post-table__date">
								<FormattedDate date={pubDate} />
							</td>
						</tr>
					);
				})}
			</tbody>
		</table>
	</section>
) : null}

<style>
	.latest-posts {
		padding: 2rem 1rem 0;
		margin: 0 auto;
		max-width: 720px;
	}

	.latest-posts__header {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 1rem;
		margin-bottom: 1.5rem;
	}

	.latest-posts__header h2 {
		margin: 0;
		font-size: clamp(1.5rem, 2vw, 2rem);
	}

	.latest-posts__view-all {
		font-size: 0.95rem;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.08em;
		color: var(--accent);
		text-decoration: none;
	}

	.post-table {
		width: 100%;
		border-collapse: collapse;
		background: white;
		box-shadow: var(--box-shadow);
		border-radius: 12px;
		overflow: hidden;
	}

	.post-table th,
	.post-table td {
		padding: 1rem;
		text-align: left;
		border-bottom: 1px solid rgba(var(--black), 0.08);
		vertical-align: middle;
	}

	.post-table thead {
		background: rgb(var(--gray-light));
		text-transform: uppercase;
		letter-spacing: 0.08em;
		font-size: 0.85rem;
		font-weight: 600;
		color: rgb(var(--gray));
	}

	.post-table tr:last-child td {
		border-bottom: none;
	}

	.post-table a {
		display: inline-flex;
		align-items: center;
		gap: 0.75rem;
		color: inherit;
		text-decoration: none;
		transition: color 0.2s ease;
	}

	.post-table__title a {
		font-weight: 600;
		color: rgb(var(--black));
	}

	.post-table__date {
		font-size: 0.8em;
		white-space: nowrap;
		width: 8rem;
	}

	.post-table a:hover {
		color: var(--accent);
	}

	.post-table tr:hover {
		background: rgba(var(--gray), 0.08);
	}

	.post-table__title a:hover {
		color: var(--accent);
	}

	@media (max-width: 720px) {
		.latest-posts {
			padding-inline: 0;
		}

		.latest-posts__header,
		.post-table,
		.post-table thead,
		.post-table tbody,
		.post-table th,
		.post-table td,
		.post-table tr {
			display: block;
			width: 100%;
		}

		.post-table thead {
			position: absolute;
			clip: rect(0 0 0 0);
			height: 1px;
			width: 1px;
			overflow: hidden;
		}

		.post-table tr {
			border-bottom: 1px solid rgba(var(--black), 0.08);
		}

		.post-table td {
			border: none;
			padding: 1rem 1rem 0;
		}

		.post-table td:last-child {
			padding-bottom: 1rem;
		}

		.post-table__title span {
			font-size: 1.125rem;
		}

		.post-table__date {
			padding-top: 0.25rem;
			color: rgb(var(--gray));
		}

		.latest-posts__header {
			flex-direction: column;
			align-items: flex-start;
		}

		.latest-posts__view-all {
			padding-top: 0.25rem;
		}
	}
</style>
